    @section Scripts {
        <script src="/kendo/kendoui/js/jquery.min.js"></script>
        <script src="/kendo/kendoui/js/kendo.all.min.js"></script>

        <script>
            function createChart() {
                var settings = {
                    title: {
                        text: "Assessment of progress"
                    },
                    legend: {
                        visible: false
                    },
                    seriesDefaults: {
                        type: "bar"
                    },                    
                    valueAxis: {
                        max: 1600,
                        line: {
                            visible: false
                        },
                        minorGridLines: {
                            visible: true
                        },
                        labels: {
                            rotation: "auto"
                        }
                    },
                    categoryAxis: {
                        categories: ["History", "Algebra", "Biology"],
                        majorGridLines: {
                            visible: false
                        }
                    },
                    tooltip: {
                        visible: true,
                        template: "#= series.name #: #= value #"
                    }
                };

                var settings1 = $.extend({}, settings, {
                    series: [{
                        name: "Total Visits",
                        data: [560, 630, 740]
                    }],
                });

                $("#chart").kendoChart(settings1);

                var settings2 = $.extend({}, settings, {
                    series: [{
                        name: "Number",
                        data: [100, 200, 350]
                    }],
                });

                $("#chart2").kendoChart(settings2);

                var settings3 = $.extend({}, settings, {
                    series: [{
                        name: "Number",
                        data: [59, 170, 290]
                    }],
                });
                $("#chart3").kendoChart(settings3);

                var settings4 = $.extend({}, settings, {
                    series: [{
                        name: "Number",
                        data: [30, 49, 400]
                    }],
                });
                $("#chart4").kendoChart(settings4);
                $("#primaryTextButton").kendoButton();
              
             
            }
         
            $(document).ready(createChart);
            $(document).bind("kendo:skinChange", createChart);
            $(document).ready(function () {
                $("#tabstrip").kendoTabStrip({
                    animation: {
                        open: {
                            effects: "fadeIn"
                        }
                    }
                });
            });
        </script>
    }

